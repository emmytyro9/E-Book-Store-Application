<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.methawee.myapplication.data.cart.CartActivity">

    <TextView
        android:id="@+id/totalprice_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: "
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/showBalance"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="122dp" />

    <TextView
        android:id="@+id/totalprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="price "
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/totalprice_txt"
        android:layout_alignBottom="@+id/totalprice_txt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="109dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balance: "
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/showBalance"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="0.02"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="24sp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/btnAddMoney"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.04"
        android:text="Add money"
        android:textAlignment="center"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/totalprice_txt"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cartBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.05"
        android:text="My cart"
        android:textAlignment="center"
        android:layout_below="@+id/purchase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <Button
        android:id="@+id/purchase"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.05"
        android:text="Purchase Now!"
        android:textAlignment="center"
        android:layout_below="@+id/btnAddMoney"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

</RelativeLayout>
